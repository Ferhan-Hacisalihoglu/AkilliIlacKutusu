<Window x:Class="AkilliIlacKutusu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Haftalık Akıllı İlaç Kutusu" Height="750" Width="480" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="#F0F2F5" FontFamily="Segoe UI">

    <Window.Resources>
        <!-- MODERN BUTON STİLİ -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DİĞER BUTON STİLLERİ -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E53935"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFB300"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8F00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- KART STİLİ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White" CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#007ACC" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📅" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                <TextBlock Text="HAFTALIK İLAÇ PLANLAYICI" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- 1. AYARLAR -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="⚙️ Bağlantı Ayarları" FontSize="16" FontWeight="Bold" Foreground="#444" Margin="0,0,0,10"/>
                        <Separator Grid.Row="1" Margin="0,0,0,10"/>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Durum" Foreground="Gray" FontSize="11"/>
                                <TextBlock Name="txtDurum" Text="Bağlı Değil" FontWeight="SemiBold" Foreground="#E53935" Margin="0,0,0,5"/>
                                <Button Name="btnBaglan" Content="Bağlan" Click="btnBaglan_Click" Style="{StaticResource ModernButton}" Height="30"/>
                            </StackPanel>
                            <Border Grid.Column="1" Width="1" Background="#EEE" Margin="15,5"/>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Alarm Süresi (Sn)" Foreground="Gray" FontSize="11"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="txtSureSaniye" Width="50" Height="30" Text="60" TextAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                                    <Button Name="btnSureGuncelle" Content="OK" Click="btnSureGuncelle_Click" Style="{StaticResource ModernButton}" Width="40" Background="#4CAF50"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 2. ALARM PLANLAMA -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="⏰ Yeni Alarm Ekle" FontSize="16" FontWeight="Bold" Foreground="#444" Margin="0,0,0,10"/>

                        <!-- Gün Seçimi -->
                        <TextBlock Text="Hangi Gün?" FontSize="12" Foreground="Gray" Margin="0,0,0,3"/>
                        <ComboBox Name="cmbGunSecimi" Height="35" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <!-- Saat -->
                            <StackPanel>
                                <TextBlock Text="Saat" HorizontalAlignment="Center" Foreground="Gray" FontSize="11"/>
                                <Border Background="#F9F9F9" CornerRadius="5" Padding="5">
                                    <TextBox Name="txtSaatInput" Width="60" Height="50" MaxLength="2" Text="09" 
                                             TextAlignment="Center" FontSize="32" FontWeight="Bold" BorderThickness="0" Background="Transparent"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text=":" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Margin="5,15,5,0" Foreground="#888"/>

                            <!-- Dakika -->
                            <StackPanel>
                                <TextBlock Text="Dakika" HorizontalAlignment="Center" Foreground="Gray" FontSize="11"/>
                                <Border Background="#F9F9F9" CornerRadius="5" Padding="5">
                                    <TextBox Name="txtDakikaInput" Width="60" Height="50" MaxLength="2" Text="00" 
                                             TextAlignment="Center" FontSize="32" FontWeight="Bold" BorderThickness="0" Background="Transparent"/>
                                </Border>
                            </StackPanel>

                            <!-- Kutu -->
                            <StackPanel VerticalAlignment="Center" Margin="20,15,0,0">
                                <TextBlock Text="Kutu No" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                                <ComboBox Name="cmbKutuSecimi" Width="70" Height="35" SelectedIndex="0" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0">
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="btnIslem" Content="Listeye Ekle" Click="btnIslem_Click" Style="{StaticResource ModernButton}" Height="40" FontSize="16"/>
                            <Button Name="btnIptal" Content="İptal" Click="btnIptal_Click" Style="{StaticResource DangerButton}" 
                                    Grid.Column="1" Width="80" Margin="10,0,0,0" Visibility="Collapsed"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 3. LİSTE -->
                <Border Style="{StaticResource CardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#FAFAFA" CornerRadius="8,8,0,0" Padding="15,10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                            <TextBlock Text="📋 Haftalık Program" FontSize="15" FontWeight="Bold" Foreground="#555"/>
                        </Border>

                        <ListBox Name="lstAlarmlar" Grid.Row="1" Height="200" BorderThickness="0" Background="Transparent" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="10">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="White" BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" Padding="10">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Gün İkonu -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Background="#E3F2FD" CornerRadius="8" Width="50" Height="50">
                                                <TextBlock Text="📅" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                            </Border>

                                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                <!-- GÜN BİLGİSİ EKLENDİ -->
                                                <TextBlock Text="{Binding Gun}" FontSize="14" FontWeight="Bold" Foreground="#007ACC"/>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#333">
                                                        <Run Text="{Binding Saat}"/>
                                                        <Run Text=":"/>
                                                        <Run Text="{Binding Dakika}"/>
                                                    </TextBlock>
                                                    <Border Background="#FFF3E0" CornerRadius="4" Margin="10,0,0,0" Padding="5,0">
                                                        <TextBlock Text="{Binding KutuNo, StringFormat={}Kutu {0}}" 
                                                                   FontSize="12" Foreground="#EF6C00" VerticalAlignment="Center" FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Butonlar -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="Düzenle" Click="btnDuzenle_Click" Style="{StaticResource WarningButton}" 
                                                    Width="70" Height="30" FontSize="12" Margin="0,0,5,0" Tag="{Binding}"/>
                                            <Button Content="Sil" Click="btnSil_Click" Style="{StaticResource DangerButton}" 
                                                    Width="50" Height="30" FontSize="12" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <TextBlock Text="Sistem: " VerticalAlignment="Center" Foreground="#888" FontSize="12"/>
                <TextBlock Name="txtGuncelSaat" Text="..." VerticalAlignment="Center" FontWeight="Bold" Foreground="#333" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>